{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome debug",
      "url": "localhost:3001",
      // "webRoot": "${workspaceFolder}/src/app/static",
      // "webRoot": "${workspaceFolder}/src/app/static/1.3.dev",
      "webRoot": "${workspaceFolder}/src/app",
      // "webRoot": "${workspaceFolder}",
      "disableNetworkCache": true,
      "runtimeArgs": ["--incognito"], // this is to prevent "Restore previous pages" popup,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        //"webpack:///*":     "*",                               // Example: "webpack:///project/app.ts" -> "/project/app.ts"
        "webpack:///./*": "${webRoot}/*" // Example: "webpack:///src/app.js" -> "/Users/me/project/app.js"
        // "webpack://./*": "${webRoot}/*",                    // Example: "webpack:///src/app.js" -> "/Users/me/project/app.js"
        // "webpack:///./*": "${workspaceFolder}/src/app",                    // Example: "webpack:///src/app.js" -> "/Users/me/project/app.js"
      }
    },
    {
      "type": "pwa-chrome",
      "request": "attach",
      "port": 9222,
      "name": "Attach to Chrome debug",
      "url": "localhost:3001",
      "webRoot": "${workspaceFolder}",
      "disableNetworkCache": true
    }
  ]
}
